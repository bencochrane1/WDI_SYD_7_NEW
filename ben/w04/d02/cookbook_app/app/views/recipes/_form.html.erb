
<%= form_for @recipe do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :course %>
        <%= f.text_field :course %>
    </p>
    <p>
        <%= f.label :cooktime %>
        <%= f.text_field :cooktime %>
    </p>
    <p>
        <%= f.label :serving_size, "Serving Size" %>
        <%= f.text_field :serving_size %>
    </p>
    <p>
        <%= f.label :instructions %>
        <%= f.text_area :instructions %>
    </p>
    <p>
        <%= f.label :image %>
        <%= f.url_field :image %>
    </p>
    <p>
        <%= f.label :book_id %>
        <%= f.collection_select :book_id, Book.all, :id, :title %>
    </p>

    <p>
        <%= f.label :ingredient_ids %>
        <%= f.collection_select :ingredient_ids, Ingredient.all, :id, :name %>
    </p>

    <p>
        <%= f.label :ingredient_ids %>
        <%= f.collection_select :ingredient_ids, Ingredient.all, :id, :name %>
    </p>



    <p>
        <%= f.submit %>
    </p>

<% end %>